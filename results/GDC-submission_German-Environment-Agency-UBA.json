        {
            "text": "GERMAN ENVIRONMENT AGENCY SUBMISSION TO THE GDC",
            "name": "subtitle-level-1",
            "type": "subtitle-level-1",
            "prov": [
                {
                    "bbox": [
                        69.7591552734375,
                        662.470703125,
                        524.8055419921875,
                        684.9363403320312
                    ],
